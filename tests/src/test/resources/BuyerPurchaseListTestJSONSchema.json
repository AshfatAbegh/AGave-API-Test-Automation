{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "buyerProducts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "producerName": {
            "type": "string"
          },
          "publishedAt": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{2,3}$"
          },
          "productImage": {
            "type": ["null", "string"]
          },
          "status": {
            "type": "string",
            "enum": ["SOLD"]
          },
          "buyerSurvey": {
            "type": "boolean"
          }
        },
        "required": ["id", "name", "price", "producerName", "publishedAt", "productImage", "status", "buyerSurvey"],
        "additionalProperties": false
      }
    },
    "totalItems": {
      "type": "integer",
      "minimum": 0
    },
    "totalPages": {
      "type": "integer",
      "minimum": 1
    },
    "currentPage": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": ["buyerProducts", "totalItems", "totalPages", "currentPage"],
  "additionalProperties": false
}